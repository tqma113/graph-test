{
  "compilerOptions": {
    "baseUrl": ".",
    "sourceMap": false,
    "target": "es2019",
    "module": "commonjs",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "allowJs": false,
    "noUnusedLocals": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "preserveConstEnums": true,
    "noImplicitThis": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "jsx": "react",
    "lib": ["es2019", "dom"],
    "types": ["node", "jest"],
    "paths": {
      "@gtl/*": ["packages/*/src"],
    },
    "rootDir": "."
  },
  "include": ["packages/*/src"]
}
