{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "emitDeclarationOnly": true,
    "declaration": true,
    "sourceMap": false,
    "target": "es5",
    "module": "esnext",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": false,
    "noUnusedLocals": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "preserveConstEnums": true,
    "noImplicitThis": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "lib": [
      "esnext",
      "dom"
    ],
    "types": [
      "node"
    ],
    "rootDir": "."
  },
  "include": [
    "src"
  ]
}
